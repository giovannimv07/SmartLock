{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		// "target": "es2016",
		// "module": "Node16",
		// "moduleResolution": "Node16",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
